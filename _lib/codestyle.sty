  xrightmargin=4pt,
  numbers=left,
  stepnumber=1,    
  numberstyle=\color{mygray}\texttt,
  firstnumber=1,
  numberfirstline=true,
  tabsize=4,
  captionpos=b,
  breaklines=true,
  breakatwhitespace=false,
  escapechar=\%,
  backgroundcolor=\color{editorGray},
}
% PHP listing
\lstdefinestyle{php} {
  language        = php,
  basicstyle      = \small\ttfamily,
  keywordstyle    = \color{blue},
  stringstyle     = \color{dkred},
  identifierstyle = \color{dkblue},
  commentstyle    = \color{gray},
  alsoletter={<,>,+,-,&,=,!,;},
  emph =[1]{public, class, function, private, protected, new, return, echo, as, for, foreach, array, &, if, else, break, continue},
  emphstyle =[1]\color{editorGreen},
  emph =[2]{<,>,+,-,&,=,!,;},
  emphstyle =[2]\color{editorGreen},
  showspaces=false,
  frame=single,
  framesep=8pt,
  xleftmargin=8pt,
  xrightmargin=4pt,
  numbers=left,
  stepnumber=1,    
  numberstyle=\color{mygray}\texttt,
  firstnumber=1,
  numberfirstline=true,
  tabsize=4,
  captionpos=b,
  breaklines=true,
  breakatwhitespace=false,
  escapechar=\%,
  backgroundcolor=\color{editorGray},
  literate=
            *{\{}{{\textcolor{editorGreen}{\{}}}{1}
            {\}}{{\textcolor{editorGreen}{\}}}}{1}
            {->}{{\textcolor{editorGreen}{->}}}{2}
            {=>}{{\textcolor{editorGreen}{=>}}}{2}
            {[}{{\textcolor{editorGreen}{[}}}{1}
            {]}{{\textcolor{editorGreen}{]}}}{1},
}
