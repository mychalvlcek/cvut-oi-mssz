  language=html,
  sensitive=true,	
  alsoletter={<,=,>,/},
  morecomment=[s]{<!-}{-->},
  tag=[s],
  keywords={
	/>,>,<,</h1,<h1,<input,</button,<button,<form,</form, <label,</label,<a,</a
  },
